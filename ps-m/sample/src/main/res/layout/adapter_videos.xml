<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:paddingTop="0.5dp"
        android:layout_height="match_parent">

        <!-- Video Thumbnail -->
       <com.google.android.youtube.player.YouTubeThumbnailView
            android:id="@+id/imageView_thumbnail"
            android:layout_width="119.5dp"
            android:layout_height="119.5dp"
            android:layout_margin="0dp"
            android:scaleType="centerCrop"
           android:visibility="gone"
            android:background="@android:color/black"
            android:layout_alignParentLeft="true"/>
    <ImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="119.5dp"
        android:layout_height="119.5dp"
        android:layout_margin="0dp"
        android:scaleType="fitCenter"

        android:background="@android:color/black"
        android:layout_alignParentLeft="true"/>

        <!-- Video Title -->
        <TextView
            android:id="@+id/tvTitleName"
            android:layout_width="119.5dp"
            android:layout_height="wrap_content"
            android:padding="3dp"

            android:text="this snadjfnkj asdlkniojnansdfnonaisdf"
            android:textColor="@color/primary"
            android:background="@color/tr_black"
            android:maxLines="2"
            android:textSize="9sp"

            android:layout_alignBottom="@+id/imageView_thumbnail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/imageView_thumbnail"
            android:layout_alignEnd="@+id/imageView_thumbnail" />

    </RelativeLayout>