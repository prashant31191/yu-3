<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/revealactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="96dp"
                android:layout_centerHorizontal="true"
                android:onClick="reveal"
                android:text="Reveal Activity" />


            <Button
                android:id="@+id/menuactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="196dp"
                android:layout_centerHorizontal="true"
                android:onClick="menuDrawer"
                android:text="Menu Activity" />




            <com.quinny898.library.persistentsearch.SearchBox
                android:layout_width="wrap_content"
                android:id="@+id/searchbox"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menuactivity"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="126dp"
                android:id="@+id/messageView" />

            <Button
                android:text="btnListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="383dp"
                android:id="@+id/btnListView" />
            <Button
                android:text="btnRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="230dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="383dp"

                android:id="@+id/btnRecyclerView" />

        </RelativeLayout>



    </LinearLayout>

    <!--android:layout_gravity="start"-->
    <LinearLayout
        android:id="@+id/llleft_drawer"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_gravity="start"
        android:background="#95B30000"

        android:orientation="vertical">

    <!--<ListView android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ff31d5e2"/>-->
        <LinearLayout
            android:id="@+id/llm_a"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_header_height">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv1"
                    android:src="@drawable/ic_history"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_m_mp15"
                    android:text="Some Text"
                    android:textSize="@dimen/d_m_t15"
                    android:textColor="@color/txt_color"
                    android:id="@+id/tv1"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv1"
                    android:layout_toEndOf="@+id/iv1" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llm_b"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:onClick="menuPlay"
            android:layout_height="@dimen/activity_header_height">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv2"
                    android:src="@drawable/ic_history"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_m_mp15"
                    android:text="Profile View"
                    android:textSize="@dimen/d_m_t15"
                    android:textColor="@color/txt_color"
                    android:id="@+id/tv2"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv2"
                    android:layout_toEndOf="@+id/iv2" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llm_c"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_header_height">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv3"
                    android:src="@drawable/ic_history"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_m_mp15"
                    android:text="Le-Tube"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/d_m_t15"
                    android:id="@+id/tv3"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv3"
                    android:layout_toEndOf="@+id/iv3" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llm_d"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_header_height">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv4"
                    android:src="@drawable/ic_history"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_m_mp15"
                    android:text="De-Data"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/d_m_t15"
                    android:id="@+id/tv4"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv4"
                    android:layout_toEndOf="@+id/iv4" />
            </RelativeLayout>
        </LinearLayout>



    </LinearLayout>
</android.support.v4.widget.DrawerLayout>

