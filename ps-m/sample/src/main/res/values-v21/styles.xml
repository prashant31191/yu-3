        </item>
        <item name="android:windowSharedElementReturnTransition">
            @transition/shared_element_curvemotion_return
        </item>
        <item name="android:windowEnterTransition">@transition/activity_reveal_header</item>
        <item name="android:windowReturnTransition">@transition/activity_return_avatar</item>

    </style>

    <style name="MyAppTheme2" parent="MyBaseTheme">

        <item name="android:windowSharedElementEnterTransition">
            @transition/shared_element_curvemotion_enter
        </item>
        <item name="android:windowSharedElementReturnTransition">
            @transition/shared_element_curvemotion_return
        </item>
        <item name="android:windowEnterTransition">@transition/activity_reveal_header</item>
        <item name="android:windowReturnTransition">@transition/activity_return_avatar</item>

    </style>

    <style name="AvatarStyle" parent="CircleShapeStyle">
        <item name="android:outlineProvider">background</item>
    </style>



    <style name="YouTubeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActionBar">false</item>


        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

</resources>
