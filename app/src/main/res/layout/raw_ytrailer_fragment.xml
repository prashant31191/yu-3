<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardlist_item"
        android:layout_margin="8dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/d5"
        app:cardCornerRadius="@dimen/d7"
        >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/tvTtile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="17dp"
                android:textColor="@color/blue_grey_900"
                android:textAppearance="@style/styFFuturaReg"
                android:paddingLeft="@dimen/d8"
                android:paddingRight="@dimen/d8"
                android:paddingTop="@dimen/d8"
                />
            <TextView
                android:id="@+id/tvDesc"
                android:layout_below="@+id/tvTtile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_grey_400"
                android:textSize="12dp"
                android:text="TextView"
                android:padding="@dimen/d8"

                android:textAppearance="@style/styFRobotoSlabReg"

                />

            <ImageView
                android:id="@+id/ivImage"
                android:layout_below="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:src="@drawable/header"
                android:scaleType="centerCrop"

                />

            <TextView
                android:id="@+id/tvDownload"
                android:layout_alignBottom="@+id/ivImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_grey_900"
                android:textSize="15dp"
                android:text="Download"
                android:padding="@dimen/d12"
                android:textAppearance="@style/styFRobotoSlabReg"
                android:background="#afff"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>