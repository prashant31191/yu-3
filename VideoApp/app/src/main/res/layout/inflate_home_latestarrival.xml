<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <android.support.v7.widget.CardView
            android:id="@+id/cardlist_item"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:elevation="@dimen/d5"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/d3">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/d8"
                    android:paddingRight="@dimen/d8"
                    android:paddingTop="@dimen/d8"
                    android:text="TextView"
                    android:textAppearance="@style/styFFuturaReg"
                    android:textColor="@color/blue_grey_900"
                    android:textSize="14dp"
                    android:singleLine="true"
                    />

                <TextView
                    android:id="@+id/tvCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvProductName"
                    android:padding="@dimen/d8"
                    android:text="TextView"
                    android:textAppearance="@style/styFFuturaReg"
                    android:textColor="@color/blue_grey_400"

                    android:textSize="12dp"
                    android:singleLine="true"

                    />


                <View
                    android:id="@+id/vDummy"
                    android:layout_width="match_parent"
                    android:layout_height="181dp"
                    android:layout_below="@+id/tvCompanyName"
                    android:background="@color/blue_grey_900" />

                <ImageView
                    android:id="@+id/ivImg"
                    android:layout_width="match_parent"
                    android:layout_height="181dp"
                    android:layout_below="@+id/tvCompanyName"
                    android:alpha="0.8"
                    android:background="@color/blue_grey_900"
                    android:scaleType="centerCrop"
                    android:src="@drawable/header"
                    />


                <ImageView
                    android:id="@+id/ivPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tvDownload"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="25dp"
                    android:alpha="0.8"
                    android:elevation="@dimen/d8"
                    android:src="@drawable/ic_play_circle_filled_black_24dp" />


                <TextView
                    android:id="@+id/tvDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ivImg"
                    android:layout_alignParentRight="true"
                    android:background="#00ffffff"
                    android:drawableLeft="@drawable/ic_file_download_red_500_36dp"
                    android:drawablePadding="@dimen/d5"
                    android:padding="@dimen/d5"
                    android:text=""
                    android:alpha="0.8"

                    android:textColor="@color/blue_grey_900"
                    android:textSize="12dp"
                    android:singleLine="true"
                    />
                <!--android:textAppearance="@style/styFRobotoSlabReg"-->

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>


    



    <TextView
        android:visibility="gone"
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="8dp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="8dp"
        android:textColor="@color/colorAccent" />

</LinearLayout>