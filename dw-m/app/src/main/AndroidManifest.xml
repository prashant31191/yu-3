		<activity
			android:name=".ui.main.MainActivity"
			android:label="@string/app_name"
			android:theme="@style/Theme_App_Blue"
			android:launchMode="singleTask">
			<intent-filter tools:ignore="GoogleAppIndexingUrlError">
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.BROWSABLE" />
			</intent-filter>
			<intent-filter>
				<action android:name="us.shandian.giga.intent.DOWNLOAD"/>
				<category android:name="android.intent.category.DEFAULT"/>
				<category android:name="android.intent.category.BROWSABLE"/>
				<data

					android:mimeType="application/*"
					android:host="*"
					android:scheme="http"/>
				<data
					android:mimeType="application/*"
					android:host="*"
					android:scheme="https"/>
			</intent-filter>
			<intent-filter>
				<data android:scheme="https"/>
				<data android:scheme="http"/>
				<data android:host="google.com"/>
				<data android:host="www.google.com"/>
				<data android:host="r2---sn-p5qlsn6z.googlevideo.com"/>
				<data android:host="*.googlevideo.com"/>
				<data android:host="*.*"
					tools:ignore="AppLinkUrlError" />
				<data android:scheme="customscheme"/>
				<data android:host="customHost"
					tools:ignore="AppLinkUrlError" />

				<data android:pathPattern=".*"/>

				<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
				<category android:name="android.intent.category.BROWSABLE"/>
			</intent-filter>


		</activity>
		
		<activity
			android:name=".ui.main.DetailActivity"
			android:label="@string/app_name"
			android:theme="@style/Theme_App_Blue">

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			
		</activity>
		
		<activity
			android:name=".ui.web.BrowserActivity"
			android:label="@string/browser"
			android:theme="@style/Theme_App_Blue">

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<action android:name="android.intent.action.SEND"/>

				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="text/*"/>

			</intent-filter>

		</activity>
